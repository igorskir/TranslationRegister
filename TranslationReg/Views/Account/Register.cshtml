@model TranslationReg.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
    Layout = null;
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Style/css")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>
<body>
    <div class="dynamic-block-create padding-container">
        <h2>Регистрация</h2>
        @using (Html.BeginForm("Register", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => Model.Name, "Логин *")
                @Html.EditorFor(model => Model.Name)
                @Html.ValidationMessageFor(model => Model.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, "Пароль *")
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, "Подтверждение пароля *")
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>


            <div class="form-group">
                @Html.Label("Файл аватарки")
                <input type="file" name="avatar" accept="image/*" />
            </div>
            <div>
                <a href="/Account/Login" class="btn btn-default btn-form">К авторизации</a>
                <input type="submit" value="Зарегистрироваться" class="btn btn-default btn-form" style="float:left; margin-left:100px;"/>
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
