@model TranslationRegistryModel.DocStage
<div class="doc-card-container">
    <div class="doc-card">
        <div class="doc-card-header">
            <p style="margin:0;">@Model.Document.Name</p>
            <i class="material-icons loadModal" data-href="/DocStages/Delete/@Model.Id">delete</i>
        </div>
        <div class="doc-card-content">
            @{
                var extension = Path.GetExtension(Model.Document.OriginalFile.Path);
                switch (extension)
                {
                    case ".doc":
                    case ".docx":
                        <img src="~/Uploads/DocIcons/doc.png" />
                        break;
                    case ".ppt":
                    case ".pptx":
                        <img src="~/Uploads/DocIcons/ppt.png" />
                        break;
                    case ".pdf":
                        <img src="~/Uploads/DocIcons/pdf.png" />
                        break;
                    default:
                        <img src="~/Uploads/DocIcons/any.png" />
                        break;
                }
            }
            <div class="flex-column doc-card-file">
                <div class="flex-row">
                    <span>Оригинал</span>
                    @if (Model.OriginalId != null)
                    {
                        <a href="@Url.Action("Download", "Documents", new { @filepath = Model.Original.Path })">
                            <i class="material-icons">file_download</i>
                        </a>
                    }
                    else
                    {
                        <a><i class="material-icons disabled-icon">file_download</i></a>
                    }
                    <a class="loadModal" data-href="/DocStages/AddOriginalFile/@Model.Id">
                        <i class="material-icons">attach_file</i>
                    </a>
                </div>
                <div class="flex-row">
                    <span>@(Model.WorkType.Name)</span>
                    @if (Model.ResultId != null)
                    {
                        <a href="@Url.Action("Download", "Documents", new { @filepath = Model.Result.Path })">
                            <i class="material-icons">file_download</i>
                        </a>
                    }
                    else
                    {
                        <a><i class="material-icons disabled-icon">file_download</i></a>
                    }
                    <a class="loadModal" data-href="/DocStages/AddFinalFile/@Model.Id">
                        <i class="material-icons">attach_file</i>
                    </a>
                </div>
            </div>
        </div>

        <div class="doc-next-stage loadModal" data-href="/DocStages/CreateModal/@Model.DocumentId">
            <i class="material-icons">keyboard_arrow_down</i>
        </div>
    </div>
</div>