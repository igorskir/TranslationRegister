@model TranslationReg.Models.StageForProjModel
@if (Model != null && Model.worktypes.Any())
{
    using (Html.BeginForm("AddToProject", "DocStages", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.projectId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.worktypeId, "Тип работ" )
            @Html.DropDownListFor(model => model.worktypeId, Model.worktypes, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.worktypeId, "", new { @class = "text-danger" })
        </div>

        <input type="submit" value="Сохранить" class="btn btn-default" />
    }
}
else
{
    <p>Все возможные стадии присутствуют.</p>
    <p>Добавьте работу в существующие стадии.</p>
    <p>Либо добавьте новые типы работ</p>
}


