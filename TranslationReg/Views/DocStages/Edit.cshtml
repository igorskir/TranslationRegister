@model TranslationRegistryModel.DocStage

<div class="dynamic-block-create">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Document.Id)
        @Html.HiddenFor(model => model.DocFileId)

        <div class="form-group">
            @Html.LabelFor(model => model.WorkTypeId, "WorkTypeId")
            @Html.DropDownList("WorkTypeId", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.WorkTypeId, "", new { @class = "text-danger" })
        </div>

        <input type="submit" value="Сохранить" class="btn btn-default btn-form" />
    }
</div>
