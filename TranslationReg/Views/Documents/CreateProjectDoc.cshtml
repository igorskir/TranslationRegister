@model TranslationRegistryModel.Document
<div class="dynamic-block-create">

    @using (Html.BeginForm("Create", "Documents", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProjectId)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="dropArea" onclick="OpenDialog()" onmouseenter="EnterFunction()" onmouseout="OutFunction()">
        <i class="material-icons" style="
            font-size: 33px;
            margin-top:5px;
                ">file_download</i><br>

        Для загрузки файлов перетащите их сюда.
    </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Name, "Название")
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required " } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>*@

        <div class="form-group" >
            <input type="file" multiple name="original" id="FileChoiser" style="font-size:14px" required="required" />
        </div>

        <input type="submit" value="Сохранить" class="btn btn-default btn-form" />

        
        <ul class="list-group" id="uploadList"></ul>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function OpenDialog() {
        document.getElementById("FileChoiser").click();
    }
    function EnterFunction() {
        
        $('#dropArea').addClass('active-drop');
    }
    function OutFunction() {
        
        $('#dropArea').removeClass('active-drop');
    }

</script>
<script type="text/javascript">
            
            $(function () {
                $('#dropArea').filedrop({
                    url: '@Url.Action("UploadFiles/" + Model.ProjectId)',
                    allowedfiletypes: [],
                    allowedfileextensions: [],
                    paramname: 'files',
                    maxfiles: 20,
                    maxfilesize: 500, // in MB
                    
                    dragOver: function () {
                        $('#dropArea').addClass('active-drop');
                    },
                    dragLeave: function () {
                        $('#dropArea').removeClass('active-drop');
                    },
                    drop: function () {
                        $('#dropArea').removeClass('active-drop');
                    },
                    afterAll: function (e) {
                        $('#dropArea').html('Файлы успешно загружены');
                        location.reload(true) //перезагрузка страницы

                    },
                    uploadFinished: function (i, file, response, time) {
                        $('#uploadList').append('<li class="list-group-item">Загружен файл ' +  file.name + '</li>')

                    }
                    

                })
               
            })
</script>