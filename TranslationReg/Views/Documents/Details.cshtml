@model TranslationRegistryModel.Document
<div>
    <h2>@Model.Name</h2>
    <dl class="dl-horizontal">
        <dt>
            Создатель
        </dt>
        <dd>
            @Html.Label(Model.Owner.Name)
        </dd>

        <dt>
            Скачать оргигинал
        </dt>
        <dd>
            <a href="@Url.Action("Download", "Documents", new { @filepath = Model.OriginalFile.Path })" class="glyphicon glyphicon-download"></a>
        </dd>

        <dt>
            Скачать перевод
        </dt>
        <dd>
            @if (Model.FinalFile!= null && !String.IsNullOrWhiteSpace(Model.FinalFile.Path))
    {
        <a href="@Url.Action("Download", "Documents", new { @filepath = Model.FinalFile.Path })" class="glyphicon glyphicon-download"></a>

}
        </dd>
    </dl>
</div>
