@model TranslationRegistryModel.Document
<div>

    <h2>Документ: @Model.Name</h2>
    <dl class="dl-horizontal">
        <dt>Создатель</dt>
        <dd>@Model.Owner.Name</dd>

        <dt>Количество слов</dt>
        <dd>@Model.WordsNumber</dd>

        <dt>Скачать оргигинал</dt>
        <dd><a href="@Url.Action("Download", "Documents", new { @filepath = Model.OriginalFile.Path })" class="btn btn-default">Скачать</a></dd>

        @if (Model.FinalFile != null)
        {
            <dt>Скачать перевод</dt>
            <dd><a href="@Url.Action("Download", "Documents", new { @filepath = Model.FinalFile.Path })" class="btn btn-default">Скачать</a></dd>
        }
    </dl>

    <a data-ajax-update="#addDocStageForm" data-href="/DocStages/Create/@Model.Id" class="btn btn-primary ajaxToggleBtn">Добавить стадию</a>
    <div id="addDocStageForm" class="dynamicBlock"></div>

    @Html.Partial("../DocStages/List", Model.Stages.ToList())
</div>

