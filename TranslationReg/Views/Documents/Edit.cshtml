@model TranslationRegistryModel.Document

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Edit", "Documents", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.OwnerId)
            @Html.HiddenFor(model => model.OriginalFileId)
            @Html.HiddenFor(model => model.FinalFileId)
            @Html.HiddenFor(model => model.Date)

            <!-- Хедер -->
            <div class="modal-header  edit-header">
                <h4 class="modal-title">Редактирование документа</h4>
                <p type="button" class="close" data-dismiss="modal">&times;</p>
            </div>

            <!-- Тело -->
            <div class="modal-body">
                <h3>Вы уверены, что хотите изменить данную запись?</h3>

                <div class="modal-row">
                    <div class="modal-property"><p>Создатель:</p></div>
                    <div class="modal-value">
                        @Html.EditorFor(model => model.Owner.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Название:</p></div>
                    <div class="modal-value">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Проект:</p></div>
                    <div class="modal-value">
                        @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Файл оригинала:</p></div>
                    <div class="modal-value">
                        <input type="file" name="newOriginalFile" />
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Количество слов:</p></div>
                    <div class="modal-value">
                        @Html.EditorFor(model => model.WordsNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                </div>
            </div>

            <!-- Подтверждение\отмена -->
            <div class="modal-footer">
                <input type="submit" value="Сохранить" class="btn hide-modal btn-modal btn-edit" />
                <button type="button" class="btn btn-default btn-cancel btn-modal" data-dismiss="modal">Отмена</button>
            </div>
        }
    </div>
</div>