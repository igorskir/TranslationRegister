@model TranslationRegistryModel.Document

<div>
    <div><h3>@Html.DisplayFor(modelItem => Model.Name)</h3></div>

    <div>
        @Html.ActionLink("Скачать", "Download", "Modeluments", new { @filepath = Model.OriginalFile.Path }, htmlAttributes: new { @class = "download-Btn" })
        <a class="btn btn-primary" href="/Modeluments/Edit/@Model.Id">Редактировать</a>
        <a class="btn btn-danger deleteBtn" href="/Modeluments/Delete/@Model.Id" data-dialog-title="Удаление документа">Удалить</a>
        <a data-ajax-update="#addModelStageForm@(Model.Id)" data-href="/ModelStages/Create/@Model.Id" class="btn btn-success ajaxToggleBtn">Добавить стадию</a>
    </div>
    <div id="addModelStageForm@(Model.Id)" class="dynamicBlock"></div>
</div>
