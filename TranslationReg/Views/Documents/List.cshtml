@model IEnumerable<TranslationRegistryModel.Document>

<div class="titles">
    <div class="col-md-3">@Html.Label("Наименование")</div>
    <div class="col-md-2">@Html.Label("Создатель")</div>
    <div class="col-md-1">@Html.Label("Дата")</div>
    <div class="col-md-1">@Html.Label("Слова")</div>
    <div class="col-md-1">@Html.Label("Оригинал")</div>
    <div class="col-md-1">@Html.Label("Перевод")</div>
    <div class="col-md-3">@Html.Label("Команды")</div>
</div>

@foreach (var document in Model)
{
    <div class="properties">
        <div class="col-md-3">
            <span>
                @Html.DisplayFor(modelItem => document.Name)
            </span>
        </div>
        <div class="col-md-2">
            <span>
                @Html.DisplayFor(modelItem => document.Owner.Name)
            </span>
        </div>


        <div class="col-md-1">
            <span>
                @document.Date.ToString("dd/MM/yyyy")
            </span>
        </div>

        <div class="col-md-1">
            <span>
                @Html.DisplayFor(modelItem => document.WordsNumber)
            </span>
        </div>

        <div class="col-md-1">
            @if (!String.IsNullOrWhiteSpace(document.OriginalFile.Path))
            {
                <a href="@Url.Action("Download", "Documents", new { @filepath = document.OriginalFile.Path })" class="download-Btn">Скачать</a>
            }
        </div>
        <div class="col-md-1">
            @if (document.FinalFile != null && !String.IsNullOrWhiteSpace(document.FinalFile.Path))
            {
                <a href="@Url.Action("Download", "Documents", new { @filepath = document.FinalFile.Path })" class="download-Btn">Скачать</a>
            }
        </div>
        <div class="col-md-3">
            <div class="buttons-container">
                @Html.ActionLink("Редактировать", "Edit", new { id = document.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Подробно", "DocAndStages", new { id = document.Id }, htmlAttributes: new { @class = "btn btn-info" })
                <a href="/Documents/Delete/@document.Id" class="btn btn-danger deleteBtn" data-dialog-title="Удаление документа и работ">Удалить</a>
            </div>
        </div>
    </div>
}