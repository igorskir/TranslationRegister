@model List<TranslationRegistryModel.LanguagePair>

<h2>Языковые пары</h2>

<a data-ajax-update="#addLanguagePairForm" data-href="/LanguagePairs/Create" class="btn btn-primary ajaxToggleBtn" role="button">
    Добавить</a>
<div id="addLanguagePairForm" class="dynamicBlock"></div>

<div>
    <div class="titles">
        <div class="col-md-3">@Html.Label("Язык оригинала")</div>
        <div class="col-md-3">@Html.Label("Язык перевода")</div>
        <div class="col-md-2">@Html.Label("Наименование")</div>
        <div class="col-md-4">@Html.Label("Выполнить")</div>
    </div>
    @foreach (var item in Model)
    {
        <div class="properties">
            <div class="col-md-3">
                <span>

                    @Html.DisplayFor(modelItem => item.OriginalLanguage.Name)
                </span>
            </div>
            <div class="col-md-3">
                <span>

                    @Html.DisplayFor(modelItem => item.TranslationLanguage.Name)
                </span>
            </div>
            <div class="col-md-2">
                <span>

                    @Html.DisplayFor(modelItem => item.Name)
                </span>
            </div>
            <div class="col-md-4">
                <div class="buttons-container">
                    <a data-ajax-update="#languagePair@(item.Id)" data-href="/LanguagePairs/Edit/@item.Id" class="btn btn-primary ajaxToggleBtn">
                        Редактировать</a>
                    <a data-ajax="true" href="/LanguagePairs/Delete/@item.Id" class="btn btn-danger deleteBtn" data-dialog-title="Удаление записи">Удалить</a>
                </div>
            </div>
        </div>
        <div id="languagePair@(item.Id)" class="dynamicBlock dynamicItem"></div>
    }
</div>

