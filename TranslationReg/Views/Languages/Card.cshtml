@model TranslationRegistryModel.Language
<!-- карточка языков -->
<div class="card card-orange small-card">
    <div class="card-header">
        <p>Язык</p>
        <div>
            <i class="material-icons ajaxToggleCard card-btn" data-ajax-update="#language@(Model.Id)" data-href="/Languages/EditCard/@Model.Id">mode_edit</i>
            <i class="material-icons card-btn deleteBtn" data-href="/Languages/Delete/@Model.Id" data-dialog-title="Удаление языка">delete</i>
        </div>
    </div>
    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>

        <div class="card-row">
            <div class="card-property"><p>Сокращение:</p></div>
            <div class="card-value">
                <p>@Model.ShortName<p>
            </div>
        </div>
    </div>
</div>
