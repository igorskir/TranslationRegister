@model IEnumerable<TranslationRegistryModel.Language>

@{
    ViewBag.Title = "Языки";
}

<h2>Языки</h2>

<p>
    @Html.ActionLink("Добавить", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Наименование")
        </th>
        <th>
            @Html.Label("Сокращение")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.ActionLink("Редактировать",   "Edit",     new { id=item.Id }, htmlAttributes: new { @class = "btn btn-primary"})
            @Html.ActionLink("Удалить",         "Delete",   new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
