        //        updatedBlock = $(this).attr("data-ajax-update");
        //        $(updatedBlock).toggle();
        //    });
        //});

        $(document).ready(function () {
            $(".createBtn").click(function () {
                $(this).toggleClass("glyphicon-remove");
                $(this).toggleClass("glyphicon-arrow-up");
                // изначально display:none, описанов MyAppStyles.css
                updatedBlock = $(this).attr("data-ajax-update");
                $(updatedBlock).toggle();
            });
        });

        $(".deleteBtn").on("click", function (e) {
            e.preventDefault();
            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    height: 300,
                    width: 500,
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true
                })
                .load(this.href);
        });
    </script>
}