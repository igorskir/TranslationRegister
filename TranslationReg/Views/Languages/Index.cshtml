@model TranslationReg.Models.LanguagesModel

@Html.Partial("../Languages/List", Model.languages)
@Html.Partial("../LanguagePairs/List", Model.languagePairs)

@section scripts {
    <script>
        $(document).ready(function () {
            $(".editBtn").click(function () {
                $(this).toggleClass("glyphicon-edit");
                $(this).toggleClass("glyphicon-arrow-up");
                // изначально display:none, описанов MyAppStyles.css
                updatedBlock = $(this).attr("data-ajax-update");
                $(updatedBlock).toggle();
            });
        });

        //$(document).ready(function () {
