@model TranslationRegistryModel.ProjectStatus
<!-- карточка типа работ -->
<div class="card card-blue small-card">
    <div class="card-header">
        <p>Статус проекта</p>
        <div>
            <i class="material-icons ajaxToggleCard card-btn" data-ajax-update="#projectStatuse@(Model.Id)" data-href="/ProjectStatuse/EditCard/@Model.Id">mode_edit</i>
            <i class="material-icons card-btn loadModal" data-href="/ProjectStatuse/Delete/@Model.Id" data-dialog-title="Удаление типа работ">delete</i>
        </div>
    </div>
    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>

        <div class="card-row">
            <div class="card-property"><p>Описание:</p></div>
            <div class="card-value">
                <p>@Model.Description<p>
            </div>
        </div>
    </div>
</div>
