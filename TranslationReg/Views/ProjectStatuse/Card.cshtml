@model TranslationRegistryModel.ProjectStatus
<!-- карточка типа работ -->
<div class="card card-blue small-card">
    <div class="card-header">
        <p>Статус проекта</p>
        <div>
            <a class="fa fa-edit card-btn ajaxToggleCard" data-ajax-update="#projectStatuse@(Model.Id)" data-href="/ProjectStatuse/EditCard/@Model.Id"></a>
            <a class="fa fa-times card-btn deleteBtn" href="/ProjectStatuse/Delete/@Model.Id" data-dialog-title="Удаление типа работ"></a>
        </div>
    </div>
    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>

        <div class="card-row">
            <div class="card-property"><p>Описание:</p></div>
            <div class="card-value">
                <p>@Model.Description<p>
            </div>
        </div>
    </div>
</div>
