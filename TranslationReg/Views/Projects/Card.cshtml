@model IEnumerable<TranslationRegistryModel.Project>

<h1>Проекты</h1>
<ul class="cards-list">
    @foreach (var project in Model)
    {
        <li class="cards-list-item">
            <div class="card-container">
                <div class="project-card">
                    <div class="card-name">
                        <h1 class="main-title">@project.Name <span class="card-status-light"></span></h1>
                        <div class="date">
                            <div class="day">@project.Date.Day</div>
                            <div class="month">@project.Date.ToString("MMM")</div>
                        </div>
                    </div>

                    <!-- Post Content-->
                    <div class="card-content">
                        <div class="card-info">
                            <h1 class="sub-title">Создатель: @project.Creator.Name</h1>
                            <h1 class="sub-title">@project.LanguagePair.Name</h1>
                        </div>
                        <p class="description">
                            New York, the largest city in the U.S.
                        </p>
                        <div class="card-users">
                            <a class="category" href="/Projects/TabPages/@(project.Id)">Открыть</a>
                            @{
                                var usersData = project.Documents.SelectMany
                                    (x => x.Stages.SelectMany
                                    (y => y.User_Stage.Select
                                    (z => new { z.User.AvatarPath, z.User.Name }))).Distinct();
                                if (usersData.Count() > 4)
                                {
                                    <div class="avatar-list-block">
                                        <i class="fa fa-ellipsis-h"></i>
                                        <ul class="avatar-list">
                                            @foreach (var data in usersData)
                                            {
                                                <li><img src="@Url.Content("~/"+data.AvatarPath)" title="@data.Name" /></li>
                                            }
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <ul class="list-display">
                                        @foreach (var data in usersData)
                                        {
                                            <li><img src="@Url.Content("~/"+data.AvatarPath)" title="@data.Name" /></li>
                                        }
                                    </ul>
                                }
                            }
                        </div>
                        <div class="card-meta">
                            <div class="documents">
                                @if (@project.Documents.Count == 0 || @project.Documents.Count == 1)
                                {
                                    <span><i class="fa fa-list"></i> @project.Documents.Count document</span>
                                }
                                else
                                {
                                    <span><i class="fa fa-list"></i> @project.Documents.Count documents</span>
                                }

                                @if (@project.Documents.Count == 0)
                                {
                                    <div class="documents-list">
                                        <ul>
                                            <li>Документов нет</li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="documents-list">
                                        <ul>
                                            @foreach (var document in project.Documents)
                                            {
                                                <li><a href="/Documents/DocAndStages/@document.Id">@document.Name</a></li>
                                            }
                                        </ul>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
<style>
