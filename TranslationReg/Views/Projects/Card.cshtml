                margin: 0 16px 0 0;
            }

            .project-card .card-content .card-meta a {
                color: #999999;
                text-decoration: none;
            }

    .card-content .description {
        display: block !important;
        height: auto !important;
        opacity: 1 !important;
    }

    .container:before,
    .container:after {
        content: '';
