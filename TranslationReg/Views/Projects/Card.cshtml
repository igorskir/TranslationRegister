        clear: both;
    }

    .container .column {
        width: 50%;
        padding: 0 25px;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        float: left;
    }

    .documents-list ul li {
        text-decoration: underline;
    }
</style>