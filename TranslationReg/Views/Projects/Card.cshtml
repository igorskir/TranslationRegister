@model TranslationRegistryModel.Project

<h1>Проекты</h1>
<div class="col-md-3 col-md-offset-2 card-container">
    <div class="project-card">
        <div>
            <h1 class="main-title">@Model.Name длинное название</h1>
        </div>
        <!-- Thumbnail-->
        <div class="thumbnail">
            <div class="date">
                <div class="day">@Model.Date.Day</div>
                <div class="month">@Model.Date.ToString("MMM")</div>
            </div><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg" />
        </div>
        <!-- Post Content-->
        <div class="card-content">
            <div class="category">Открыть</div>
            <h1 class="sub-title">Документы проекта</h1>
            <p class="description">
                New York, the largest city in the U.S., is an architectural marvel with plenty of historic monuments, magnificent buildings and countless dazzling skyscrapers.
            </p>
            <div class="card-meta">
                <span class="timestamp">
                    <i class="fa fa-clock-o"></i>6 mins ago
                </span>
                <span class="comments">
                    <i class="fa fa-comments"></i>
                    <a href="#"> 39 comments</a>
                </span>
            </div>
        </div>
    </div>
</div>

<style>
    .card-container {
        margin-top: 40px;
        margin-left: 40px;
    }

    .project-card {
        position: relative;
        z-index: 1;
        display: block;
        background: #FFFFFF;
        min-width: 270px;
        height: 490px;
        -webkit-box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.15);
        -moz-box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.15);
        box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.15);
        -webkit-transition: all 0.3s linear 0s;
        -moz-transition: all 0.3s linear 0s;
        -o-transition: all 0.3s linear 0s;
        transition: all 0.3s linear 0s;
    }

    .project-card {
        -webkit-box-shadow: 0px 1px 35px 0px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 1px 35px 0px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 1px 15px 0px rgba(0, 0, 0, 0.3);
    }

        .project-card .thumbnail img {
            height: 300px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .project-card .thumbnail {
            height: 400px;
            overflow: hidden;
            border: none
        }

            .project-card .thumbnail .date {
                position: absolute;
                top: 72px;
                right: 3px;
                z-index: 1;
                background: #e74c3c;
                width: 55px;
                height: 55px;
                padding: 5px 0;
                -webkit-border-radius: 100%;
                -moz-border-radius: 100%;
                border-radius: 100%;
                color: #FFFFFF;
                font-weight: 700;
                text-align: center;
                -moz-box-sizing: border-box;
                box-sizing: border-box;
            }

                .project-card .thumbnail .date .day {
                    font-size: 16px;
                }

                .project-card .thumbnail .date .month {
                    font-size: 14px;
                    text-transform: uppercase;
                }

            .project-card .thumbnail img {
                display: block;
                width: 120%;
                -webkit-transition: all 0.3s linear 0s;
                -moz-transition: all 0.3s linear 0s;
                -o-transition: all 0.3s linear 0s;
                transition: all 0.3s linear 0s;
            }

        .project-card .card-content {
            position: absolute;
            bottom: 0;
            background: #FFFFFF;
            width: 100%;
            padding: 20px;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

            .project-card .card-content .category {
                position: absolute;
                top: -30px;
                left: 0;
                background: #e74c3c;
                padding: 10px 15px;
                color: #FFFFFF;
                font-size: 14px;
                font-weight: 600;
                text-transform: uppercase;
            }

        .project-card .main-title {
            margin: 0;
            padding: 20px;
            color: #333333;
            font-size: 26px;
            font-weight: 700;
        }

        .project-card .sub-title {
            margin: 0;
            padding: 0 0 10px;
            color: #333333;
            font-size: 20px;
            font-weight: 700;
        }

        .project-card .card-content .description {
            display: none;
            color: #666666;
            font-size: 14px;
            line-height: 1.8em;
        }

        .project-card .card-content .card-meta {
            margin: 30px 0 0;
            color: #999999;
        }

            .project-card .card-content .card-meta .timestamp {
                margin: 0 16px 0 0;
            }

            .project-card .card-content .card-meta a {
                color: #999999;
                text-decoration: none;
            }

    .card-content .description {
        display: block !important;
        height: auto !important;
        opacity: 1 !important;
    }

    .container:before,
    .container:after {
        content: '';
        display: block;
        clear: both;
    }

    .container .column {
        width: 50%;
        padding: 0 25px;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        float: left;
    }
</style>