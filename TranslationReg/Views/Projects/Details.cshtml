@model TranslationRegistryModel.Project

@{
    ViewBag.Title = "Детали проекта";
}

<h2>Детали проекта</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.LabelFor(model => model.OriginalLanguage.Name,"Язык оригинала")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OriginalLanguage.Name)
        </dd>
        
        <dt>
            @Html.LabelFor(model => model.FinalLanguage.Name,"Язык перевода")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinalLanguage.Name)
        </dd>

        <dt>
            @Html.LabelFor(model => model.WordsNumber, "Количество слов")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WordsNumber)
        </dd>

    </dl>


    <table class="table">
        <tr>
            <th>
                Документы проекта
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.ActionLink("Скачать", "Download", "Documents", new { @filepath = item.Path }, htmlAttributes: new { @class = "btn" })|
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Подробно", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад к списку", "Index")
</p>
