@model TranslationReg.Models.ProjectModel

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Edit", "Projects", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Project.Id)
            @Html.HiddenFor(model => model.Project.CreatorId)
            @Html.HiddenFor(model => model.Project.Date)

            <!-- Хедер -->
            <div class="modal-header  blue-modal-header">
                <h4 class="modal-title">Редактирование проекта</h4>
                <i data-dismiss="modal" class="material-icons close">clear</i>
            </div>

            <!-- Тело -->
            <div class="modal-body">
                <h3>Вы уверены, что хотите изменить данную запись?</h3>

                <div class="modal-row">
                    <div class="modal-property"><p>Создатель</p></div>
                    <div class="modal-value">
                        @Html.EditorFor(model => model.Project.Creator.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Наименование</p></div>
                    <div class="modal-value">
                        @Html.EditorFor(model => model.Project.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Языковая пара</p></div>
                    <div class="modal-value">
                        @Html.DropDownListFor(model => model.Project.LanguagePairId, Model.LanguagePairs, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Статус</p></div>
                    <div class="modal-value">
                        @Html.DropDownListFor(model => model.Project.ProjectStatuseId, Model.ProjectStatus, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="modal-row">
                    <div class="modal-property"><p>Дедлайн</p></div>
                    <div class="modal-value">
                        <input type="date" name="Project.Deadline" value="@Model.Project.Deadline.Value.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>

            </div>

            <!-- Подтверждение\отмена -->
            <div class="modal-footer">
                <input type="submit" value="Сохранить" class="btn hide-modal btn-modal btn-modal-save" />
                <button type="button" class="btn btn-default btn-cancel btn-modal" data-dismiss="modal">Отмена</button>
            </div>
        }
    </div>
</div>