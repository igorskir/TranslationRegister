@model TranslationRegistryModel.Project

<button id="detailsBtn">Детали</button>
<button id="docsBtn">Документы</button>

<div id="detailsTab">
    @Html.Partial("../Projects/DetailsShort", Model)
</div>

<div id="docsTab" class="dynamicBlock">
    @Html.Partial("../Projects/Documents", Model)
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#detailsBtn").click(function () {
                $("#detailsTab").show("100");
                $("#docsTab").hide("100");
            });
        });
        $(document).ready(function () {
            $("#docsBtn").click(function () {
                $("#detailsTab").hide("100");
                $("#docsTab").show("100");
            });
        });
    </script>
}