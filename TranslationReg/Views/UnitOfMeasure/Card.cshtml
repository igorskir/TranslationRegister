@model TranslationRegistryModel.UnitOfMeasure
<!-- карточка типа работ -->
<div class="card card-aqua small-card">

    <div class="card-header">
        <p>Единица измерения</p>
        <div>
            <a class="fa fa-edit card-btn ajaxToggleCard" data-ajax-update="#unitOfMeasure@(Model.Id)" data-href="/UnitOfMeasure/EditCard/@Model.Id"></a>
            <a class="fa fa-times card-btn deleteBtn" href="/UnitOfMeasure/Delete/@Model.Id" data-dialog-title="Удаление типа работ"></a>
        </div>
    </div>

    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>
    </div>

</div>
