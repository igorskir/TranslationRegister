@model TranslationRegistryModel.UnitOfMeasure
<!-- карточка типа работ -->
<div class="card card-aqua small-card">

    <div class="card-header">
        <p>Единица измерения</p>
        <div>
            <i class="material-icons ajaxToggleCard card-btn"data-ajax-update="#unitOfMeasure@(Model.Id)" data-href="/UnitOfMeasure/EditCard/@Model.Id">mode_edit</i>
            <i class="material-icons card-btn loadModal" data-href="/UnitOfMeasure/Delete/@Model.Id" data-dialog-title="Удаление типа работ">delete</i>
        </div>
    </div>

    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>
    </div>

</div>
