@model TranslationRegistryModel.User_Stage


<dt>@Html.LabelFor(model => model.Comment, "Комментарий")</dt>
<dd>@Html.DisplayFor(model => model.Comment)</dd>

<div class="modal-dialog">
    <div class="modal-content">

        <!-- Хедер -->
        <div class="modal-header">
            <h4 class="modal-title">Удаление работы</h4>
            <p type="button" class="close" data-dismiss="modal">&times;</p>
        </div>

        <!-- Тело -->
        <div class="modal-body">
            <h3>Вы уверены, что хотите удалить данную запись?</h3>
            <div class="del-row">
                <div class="del-property"><p>Исполнитель:</p></div>
                <div class="del-value">
                    <p>@Model.User.Name</p>
                </div>
            </div>
            <div class="del-row">
                <div class="del-property"><p>Тип работы:</p></div>
                <div class="del-value">
                    <p>@Model.Stage.WorkType.Name</p>
                </div>
            </div>
            <div class="del-row">
                <div class="del-property"><p>Количество:</p></div>
                <div class="del-value">
                    <p>@Model.Amount (@(Model.Stage.WorkType.UnitOfMeasure.Name))</p>
                </div>
            </div>
            <div class="del-row">
                <div class="del-property"><p>Комментарий:</p></div>
                <div class="del-value">
                    <p>@Model.Comment</p>
                </div>
            </div>
        </div>

        <!-- Подтверждение\отмена -->
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Удалить" class="btn btn-delete btn-modal" />
            }
            <button type="button" class="btn btn-default btn-cancel btn-modal" data-dismiss="modal">Отмена</button>
        </div>
    </div>
</div>