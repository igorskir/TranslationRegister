@model TranslationRegistryModel.WorkType
<!-- карточка типа работ -->
<div class="card card-orange small-card">
    <div class="card-header">
        <p>Тип работ</p>
        <div>
            <a class="fa fa-edit card-btn ajaxToggleCard" data-ajax-update="#workType@(Model.Id)" data-href="/Worktypes/EditCard/@Model.Id"></a>
            <a class="fa fa-times card-btn deleteBtn" href="/Worktypes/Delete/@Model.Id" data-dialog-title="Удаление типа работ"></a>
        </div>
    </div>
    <div class="card-content">
        <div class="card-row">
            <div class="card-property"><p>Название:</p></div>
            <div class="card-value">
                <p>@Model.Name</p>
            </div>
        </div>

        <div class="card-row">
            <div class="card-property"><p>Ед. изм.:</p></div>
            <div class="card-value">
                <p>@Model.UnitOfMeasure.Name<p>
            </div>
        </div>
    </div>
</div>
