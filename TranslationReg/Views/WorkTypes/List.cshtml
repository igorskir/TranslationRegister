@model List<TranslationRegistryModel.WorkType>
<div>
    <h2>Типы работ</h2>

    <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#addWorkTypeForm"
       href="/WorkTypes/Create" class="btn btn-primary createBtn">Добавить</a>
    <div id="addWorkTypeForm" class="dynamicBlock"></div>

    <div class="titles">
        <div class="col-md-3">@Html.Label("Наименование")</div>
        <div class="col-md-4">@Html.Label("Описание")</div>
        <div class="col-md-2">@Html.Label("Единицы измерения")</div>
        <div class="col-md-3">@Html.Label("Команды")</div>
    </div>
    @foreach (var workType in Model)
    {
    <div class="properties">
        <div class="col-md-3">@Html.DisplayFor(modelItem => workType.Name)</div>
        <div class="col-md-4">@Html.DisplayFor(modelItem => workType.Description)</div>
        <div class="col-md-2">@Html.DisplayFor(modelItem => workType.UnitOfMeasure.Name)</div>
        <div class="col-md-3">
            <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#workType@(workType.Id)"
               href="/WorkTypes/Edit/@workType.Id" class="btn btn-primary editBtn">Редактировать</a>
            <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#workType@(workType.Id)"
               href="/WorkTypes/Delete/@workType.Id" class="btn btn-danger deleteBtn" data-dialog-title="Удаление записи">Удалить</a>
        </div>
    </div>
        <div id="workType@(workType.Id)" class="dynamicBlock dynamicItem"></div>
    }
</div>